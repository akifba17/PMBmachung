                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkbox_brosur"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40sp"
                    android:buttonTint="@color/white"
