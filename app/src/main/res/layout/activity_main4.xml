<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"

    tools:context=".MainActivity4">
    <ScrollView
        android:layout_width="373dp"
        android:layout_height="671dp"
        android:background="#2DFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/myactt4"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox

                    android:id="@+id/chkbox_instaa"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40sp"
                    android:buttonTint="@color/white"
                    android:editable="false"
                    android:enabled="false"
                    android:text="Instagram"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/chkbox_web"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:editable="false"
                    android:enabled="false"
                    android:text="Website"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkbox_BK"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40sp"
                    android:buttonTint="@color/white"
                    android:editable="false"
                    android:enabled="false"
                    android:text="Guru BK"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/chkbox_edufair"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:editable="false"
                    android:enabled="false"
                    android:text="Edufair"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkbox_presentasi"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40sp"
                    android:buttonTint="@color/white"
                    android:editable="false"
                    android:enabled="false"
                    android:text="Presentasi di Kelas"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/chkbox_ortu"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:editable="false"
                    android:enabled="false"
                    android:text="Orangtua"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkbox_teman"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40sp"
                    android:buttonTint="@color/white"
                    android:editable="false"
                    android:enabled="false"
                    android:text="Teman/Saudara"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/chkbox_koranradio"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:editable="false"
                    android:enabled="false"
                    android:text="Koran/Radio"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
